{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./out/.tsbuildinfo",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "esModuleInterop": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./out",
    "strict": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "preserveWatchOutput": true
  },
  "include": ["./src/**/*"],
}
